<p id="notice"><%= notice %></p>

<h1 class="center">Posts</h1>

<div id="newPostButton">
  <%= link_to 'New Post', new_post_path, class: 'btn btn-default btn-lg' %>
</div>

<div id='allPosts'>
  <table align="center">

    <tbody>
      <% @posts.reverse_each do |post| %>
        <tr>
          <td id="postTitle"><%= post.title %></td>
        </tr>
        <tr>
          <td id="date">Posted on: <%= post.created_at.strftime("%d %B %Y") %></td>
        </tr>
        <tr>
          <td id="content"><%= simple_format(post.content) %></td>
        </tr>
        <tr>
          <td> <%= image_tag(post.image.to_s) if post.image? %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
